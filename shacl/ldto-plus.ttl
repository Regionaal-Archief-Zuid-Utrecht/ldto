@prefix rdf:      <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:       <http://www.w3.org/ns/shacl#> .
@prefix xsd:      <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:     <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:      <http://www.w3.org/2002/07/owl#> .
@prefix ldto:     <https://data.razu.nl/def/ldto/> .
@prefix ldto_sh:  <https://data.razu.nl/def/ldto-shacl/> .
@prefix ldto_esh: <https://data.razu.nl/def/ldto-extended-shacl/> .
@prefix skos:     <http://www.w3.org/2004/02/skos/core#> .
@prefix dcterms:  <http://purl.org/dc/terms/> .
@prefix premis:   <http://www.loc.gov/premis/rdf/v3/> .
@prefix schema:   <http://schema.org/> .

ldto_sh:plus 
    a owl:Ontology ;
    owl:imports ldto_sh:core ;
    rdfs:label "LDTO plus SHACL Shapes" ;
    dcterms:creator <https://data.razu.nl/id/actor/2bdb658a032a405d71c19159bd2bbb3a> ;
    rdfs:comment "LDTO plus SHACL shapes, includes additional vocabulares" .

###
# Enriched shapes:

ldto_sh:ObjectShape
    sh:property ldto_sh:MetadataFileLocationShape .

ldto_sh:InformatieobjectShape
    sh:property [
        sh:name "Hoofdonderwerp";
        sh:description "Het hoofdonderwerp van het informatieobject, waar het één-op-één naar verwijst.";
        rdfs:comment "Is specifieker dan schema:about.";
        a sh:PropertyShape;
        sh:path schema:mainEntity;
        sh:minCount 0;
        sh:maxCount 1;
        sh:nodeKind sh:BlankNodeOrIRI 
    ] .

ldto_sh:BestandShape
    sh:property [
        sh:name "Positie" ; 
        sh:description "Als meerdere bestanden een representatie van hetzelfde informatieobject zijn, dan geeft dit de positie van het bestand binnen de set." ; 
        a sh:PropertyShape ;
        sh:path  schema:position ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:integer ;
        sh:minCount 0 ;
        sh:maxCount 1 
    ] ;
    sh:property [
        sh:name "Breedte" ; 
        sh:description "Voor afbeeldingen: de breedte in pixels." ; 
        a sh:PropertyShape ;
        sh:path  schema:width ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:integer ;
        sh:minCount 0 ;
        sh:maxCount 1 
    ] ;
    sh:property [
        sh:name "Hoogte" ; 
        sh:description "Voor afbeeldingen: de hoogte in pixels." ; 
        a sh:PropertyShape ;
        sh:path  schema:height ;
        sh:nodeKind sh:Literal ;
        sh:datatype xsd:integer ;
        sh:minCount 0 ;
        sh:maxCount 1 
    ] ;
    sh:property [
        sh:name "URL bestand" ; 
        sh:description "Actuele verwijzing naar het bestand." ; 
        rdfs:comment "Anders dan bij MDTO verwijst deze property naar een URI in plaats van naar een string met anyUrl als datatype. In plus moet deze bovendien een Premis File zijn." ;
        a sh:PropertyShape ;
        sh:path ldto:URLBestand ;
        sh:class premis:File ;
        sh:node ldto_sh:PremisFileShape ;
        sh:minCount 1 ;
        sh:maxCount 1 
    ] ;
    sh:node [
        sh:or (
            [
                sh:property [
                    sh:path schema:width ;
                    sh:maxCount 0 ;
                ] ;
                sh:property [
                    sh:path schema:height ;
                    sh:maxCount 0 ;
                ]
            ]
            [
                sh:property [
                    sh:path schema:width ;
                    sh:minCount 1 ;
                ] ;
                sh:property [
                    sh:path schema:height ;
                    sh:minCount 1 ;
                ]
            ]
        )
    ] .


####
# New shapes

# - premis related:

ldto_sh:MetadataFileLocationShape
    sh:name "MetadataFileLocationShape" ;
    sh:description "Locatie van de het bestand waar de metadata van het object te vinden is." ;
    a sh:PropertyShape ;
    sh:path dcterms:hasFormat ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:class <http://www.loc.gov/premis/rdf/v3/File> .

ldto_sh:PremisFileShape
    a sh:NodeShape ;
    sh:name "Premis File" ;
    sh:targetClass <http://www.loc.gov/premis/rdf/v3/File> ;
    rdfs:comment "Alles bestanden in de opslag zijn een Premis File.";
    sh:property [
        a sh:PropertyShape ;
        sh:path <http://www.loc.gov/premis/rdf/v3/originalName> ;
        sh:description "Oorspronkelijke bestandsnaam, zoals gebruikt bij de overdracht van archiefvormer." ;
        sh:datatype xsd:string ;
        sh:minCount 0;
        sh:maxCount 1
    ] .

# - bibliographical shapes, based on schema.org:

ldto_sh:PublicationIssueShape
    sh:name "PublicationIssue" ;
    a sh:NodeShape ;
    sh:targetClass schema:PublicationIssue ;
    rdfs:comment "In dit model is een archiefstuk zelf geen issue, maar heeft het betrekking op een issue. De relatie wordt gelegd via schema:mainEntity" ;
    sh:property [
        sh:name "Publicatiedatum" ;
        a sh:PropertyShape ;
        sh:path schema:datePublished ;
        sh:datatype xsd:date ;
        sh:minCount 1 ;
        sh:maxCount 1 
    ] ;
    sh:property [
        sh:name "Naam" ;
        a sh:PropertyShape ;
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:minCount 1;
        sh:maxCount 1 
    ] ;
    sh:property [
        sh:name "Is deel van" ;
        a sh:PropertyShape ;
        rdfs:comment "Een publication issue is altijd een deel van een (seriële) publicatie, kan ook een deel van een jaargang zijn." ;
        sh:path schema:isPartOf ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:minCount 1;
        sh:maxCount 2 
    ] ;
    sh:property [
        sh:name "Omvang in pagina's" ;
        a sh:PropertyShape ;
        sh:path schema:numberOfPages ;
        sh:datatype xsd:integer ;
        sh:minCount 1;
        sh:maxCount 1
    ] .

ldto_sh:PublicationVolumeShape
    sh:name "Jaargang" ;
    a sh:NodeShape ;
    sh:targetClass schema:PublicationVolume ;
    rdfs:comment "Een jaargang bevat een aaneengesloten jaar aan issues, doorgaans maar niet per sé binnen één kalenderjaar." ; 
    sh:property [
        sh:path schema:isPartOf ;
        sh:minCount 1;
        sh:maxCount 1
    ] ;
    sh:property [
        sh:name "Nummer jaargang" ;
        a sh:PropertyShape ;
        rdfs:comment "Neem de waarde over die de publicatie zelf aangeeft of tel vanaf 1. In praktijk een weinig betrouwbare waarde. Kan ook niet-getallen bevatten." ; 
        sh:path schema:volumeNumber;
        sh:nodeKind sh:Literal ;
        sh:minCount 0 ;
        sh:maxCount 1 
    ] .
